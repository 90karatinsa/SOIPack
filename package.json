{
  "name": "soipack",
  "private": true,
  "version": "0.1.0",
  "description": "SOIPack monorepo providing core schemas, adapters, traceability engine, reporting, CLI, and server components.",
  "license": "MIT",
  "type": "commonjs",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "typecheck": "tsc --build tsconfig.build.json --pretty",
    "lint": "eslint \"{packages,docs}/**/*.{ts,tsx}\" --max-warnings=0",
    "test": "jest",
    "server": "tsx packages/server/src/start.ts",
    "openapi:validate": "redocly lint packages/server/openapi.yaml",
    "e2e:api": "tsx scripts/e2e-api.ts",
    "format": "prettier \"**/*.{ts,tsx,js,json,md,yml,yaml}\" --write",
    "format:check": "prettier \"**/*.{ts,tsx,js,json,md,yml,yaml}\" --check",
    "demo": "bash examples/minimal/demo.sh",
    "demo:test": "node examples/minimal/verify-demo.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@types/express": "^4.17.21",
    "@redocly/cli": "^1.16.0",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.19",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "@types/supertest": "^2.0.16",
    "supertest": "^6.3.3"
  }
}
